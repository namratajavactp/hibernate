<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
       
    <class name="thirdTablePerConcreteClass.AudioDisc" table="ConcreteAUDIODISC">
        <id name="id" type="long" column="AUDIO_ID"/>     
        	<property name="name" column="NAME" type="string"/>
        	<property name="price" column="PRICE" type="int"/>    
            <property name="singer" column="SINGER" type="string"/>
            <property name="numOfSongs" column="NUMOFSONGS" type="int"/>     
    </class>
    
    <class name="thirdTablePerConcreteClass.VideoDisc" table="concreteVIDEODISC">        
       <id name="id" type="long" column="VIDEO_ID"/>  
        	<property name="name" column="NAME" type="string"/>
        	<property name="price" column="PRICE" type="int"/>
            <property name="director" column="DIRECTOR" type="string"/>
            <property name="language" column="LANGUAGE" type="string"/>
                
    </class>    
</hibernate-mapping>
