<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
<class name="lazydemo.Person" table="PERSON1" lazy="true">
    <id name="personId" />
    <property name="Name"/>
    <property name="phone"/>
    <set name="addresses" cascade="save-update" >
    	<key column="personId"/>
    	<one-to-many class="lazydemo.Address" />
    </set>
    
</class>

</hibernate-mapping>
