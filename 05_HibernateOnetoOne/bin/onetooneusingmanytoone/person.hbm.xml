<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
<class name="onetooneusingmanytoone.Person" table="onetoonePersonTable">
    <id name="personId" />
    <property name="Name"/>
    <property name="phone"/>
    <one-to-one name="address" class="onetooneusingmanytoone.Address"  cascade="all" />
</class>

</hibernate-mapping>
